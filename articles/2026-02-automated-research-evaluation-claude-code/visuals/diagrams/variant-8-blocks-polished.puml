}

rectangle "**Candidate List**\n\n<color:#555>self-depleting queue,</color>\n<color:#555>resumable state</color>" as CL <<block>>

rectangle "**Evaluation Prompt**\n\n<color:#555>research phases,</color>\n<color:#555>conservative scoring,</color>\n<color:#555>source integrity</color>" as EP <<block>>

